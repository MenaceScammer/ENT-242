pip install flask openai

from flask import Flask, render_template, request, jsonify
import openai

app = Flask(__name__)

# Set your OpenAI API key
openai.api_key = "your_openai_api_key_here"

# Chatbot function to interact with the AI for meal recommendations
def chatbot_response(user_input, dietary_restrictions):
    # This is where you can define the chatbot's AI-powered recommendation logic
    response = openai.Completion.create(
        engine="text-davinci-003",
        prompt=f"The user has the following dietary restrictions: {dietary_restrictions}. "
               f"Suggest quick, healthy meal options based on this and the user's input: {user_input}",
        max_tokens=100
    )
    return response.choices[0].text.strip()

# Homepage route
@app.route('/')
def home():
    return render_template('index.html')

# Route for handling chatbot input
@app.route('/chat', methods=['POST'])
def chat():
    user_input = request.form['user_input']
    dietary_restrictions = request.form['dietary_restrictions']
    response = chatbot_response(user_input, dietary_restrictions)
    return jsonify({'response': response})

if __name__ == '__main__':
    app.run(debug=True)
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Food Recommendation</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <h1>AI-Powered Food Recommendation System</h1>
    <p>Enter your dietary restrictions and preferences, and we'll suggest healthy meals for you.</p>

    <form id="chat-form">
        <label for="dietary_restrictions">Dietary Restrictions (e.g., allergies, diabetes):</label><br>
        <input type="text" id="dietary_restrictions" name="dietary_restrictions" required><br><br>

        <label for="user_input">What kind of meal are you looking for today?</label><br>
        <input type="text" id="user_input" name="user_input" required><br><br>

        <button type="submit">Get Recommendations</button>
    </form>

    <h2>Meal Suggestions</h2>
    <p id="response"></p>

    <script>
        $('#chat-form').on('submit', function (e) {
            e.preventDefault();
            $.ajax({
                type: 'POST',
                url: '/chat',
                data: {
                    user_input: $('#user_input').val(),
                    dietary_restrictions: $('#dietary_restrictions').val()
                },
                success: function (data) {
                    $('#response').html(data.response);
                }
            });
        });
    </script>
</body>
</html>


