pip install flask openai

from flask import Flask, render_template, request, jsonify
import openai

app = Flask(__name__)

# Set your OpenAI API key
openai.api_key = "your_openai_api_key_here"

# Chatbot function to interact with the AI for meal recommendations
def chatbot_response(user_input, dietary_restrictions):
    # This is where you can define the chatbot's AI-powered recommendation logic
    response = openai.Completion.create(
        engine="text-davinci-003",
        prompt=f"The user has the following dietary restrictions: {dietary_restrictions}. "
               f"Suggest quick, healthy meal options based on this and the user's input: {user_input}",
        max_tokens=100
    )
    return response.choices[0].text.strip()

# Homepage route
@app.route('/')
def home():
    return render_template('index.html')

# Route for handling chatbot input
@app.route('/chat', methods=['POST'])
def chat():
    user_input = request.form['user_input']
    dietary_restrictions = request.form['dietary_restrictions']
    response = chatbot_response(user_input, dietary_restrictions)
    return jsonify({'response': response})

if __name__ == '__main__':
    app.run(debug=True)

